    <body class="menubar-hoverable header-fixed ">

        <!-- BEGIN LOGIN SECTION -->
        <section class="section-account">
            <div class="img-backdrop" style="background-image: url({{asset ('lib/img/img.png')}})"></div>
            <div class="spacer"></div>
            <div class="card contain-sm">
                <div class="card-body">
                    <div class="row">
                        <div class="col-sm-6">
                            <span class="text-lg text-bold text-primary">REGISTER</span>
                            <br/><br/>
                            <form class="form form-validate" novalidate="novalidate" method="POST" action="{{ path('fos_user_registration_register')}}">
                                <div class="form-group">
                                    {{ form_widget(form.username, {'attr': {'class': 'form-control', 'data-rule-minlength': '4', 'maxlength': '10', 'aria-required': 'true'}}) }}
                                    <label for="username">Username</label>
                                </div>
                                <div class="form-group">
                                    {{ form_widget(form.email, {'attr': {'class': 'form-control', 'id': 'Email1', 'name': 'email', 'aria-required': 'true'}}) }}
                                    <label for="Email1">Email</label>
                                </div>
                                <div class="form-group">
                                    {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control', 'maxlength': '10', 'aria-required': 'true'}}) }}
                                    <label for="password">Password</label>
                                </div>
                                <div class="form-group">
                                    {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control', 'maxlength': '10', 'aria-required': 'true'}}) }}
                                    <label for="password">Password</label>
                                </div>
                                <h5 class="text-light"><strong>I want to register as :</strong></h5>
                                <div>
                                    {% for type in form.type %}

                                     <label class="radio-inline radio-styled radio-primary">
                                             {{ form_widget(type, { 'attr': { 'name': 'radio_demo','class':'radio-inline radiprimary'}}) }}
                                             {{ form_label(type) }}

                                     </label>

                                         {% endfor %}
                                </div>
                                <br/>
                                <div class="row">
                                    
                                    <div class="col-xs-6 text-right">
                                        <button class="btn btn-block btn-primary btn-raised" type="submit" >Signup</button>
                                    </div><!--end .col -->
                                </div><!--end .row -->
                                {{ form_widget(form) }}
                                {{ form_row(form._token) }}
                            </form>
                        </div><!--end .col -->
                        <div class="col-sm-5 col-sm-offset-1 text-center">
                            <br><br>
                                <h3 class="text-light">
                                    You have account already !
                                </h3>
                                <a class="btn btn-block btn-raised btn-primary" href="{{ path('fos_user_security_login') }}">Login</a>
                                </div><!--end .col -->
                            </div><!--end .row -->
                        </div><!--end .card-body -->
                    </div><!--end .card -->
                </section>
                <!-- END LOGIN SECTION -->

